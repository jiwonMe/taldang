{
  "builds": [
    {
      "src": "client",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/client" }
    },
    {
      "src": "server",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}